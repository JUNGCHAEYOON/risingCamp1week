<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundbottom_radius30_mint"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="276dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:fontFamily="@font/bmhannaair"
                    android:text="우리집"
                    android:textColor="@color/white"
                    android:textSize="23dp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:layout_width="98dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/toolbarright"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="16dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <SearchView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical"
                android:queryHint="찾아라! 맛있는 음식과 맛집"
                android:queryBackground="@color/white"
                android:iconifiedByDefault="false"
                android:textSize="18sp"/>

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whiteGrey"
            android:orientation="vertical">


            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:background="@drawable/round_button_back30"
                        android:fontFamily="@font/bmhannaair"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="# 집밥"
                        android:textSize="16dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/round_button_back30"
                        android:fontFamily="@font/bmhannaair"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="# 재주문 많아요"
                        android:textSize="16dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/round_button_back30"
                        android:fontFamily="@font/bmhannaair"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="# 쿠폰받기"
                        android:textSize="16dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/round_button_back30"
                        android:fontFamily="@font/bmhannaair"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="# 국물의 계절"
                        android:textSize="16dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/round_button_back30"
                        android:fontFamily="@font/bmhannaair"
                        android:minWidth="0dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="# 찜 많은 가게"
                        android:textSize="16dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/round_button_back30"
                        android:fontFamily="@font/bmhannaair"
                        android:minWidth="0dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="# 혼밥도 맛있게"
                        android:textSize="16dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/round_button_back30"
                        android:fontFamily="@font/bmhannaair"
                        android:minWidth="0dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="# 초밥"
                        android:textSize="16dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/round_button_back30"
                        android:fontFamily="@font/bmhannaair"
                        android:minWidth="0dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="# 맵단짠 찜닭"
                        android:textSize="16dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/round_button_back30"
                        android:fontFamily="@font/bmhannaair"
                        android:minWidth="0dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="# 샐러드"
                        android:textSize="16dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/round_button_back30"
                        android:fontFamily="@font/bmhannaair"
                        android:minWidth="0dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:text="# 추천 더 보기"
                        android:textSize="16dp" />

                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/baemin1_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:gravity="start"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_button_back20_bluemint"
                    android:fontFamily="@font/bmhannapro"
                    android:drawableBottom="@drawable/ricecake"
                    android:text="배민1"
                    android:textSize="35dp"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/baedal_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:paddingLeft="20dp"
                    android:paddingRight="14dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_button_back20"
                    android:drawableBottom="@drawable/burger"
                    android:fontFamily="@font/bmhannapro"
                    android:text="배달"
                    android:textSize="35dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <Button
                android:id="@+id/pojang_button"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/round_button_back20"
                android:fontFamily="@font/bmhannapro"
                android:drawableEnd="@drawable/pojang"
                android:paddingRight="13dp"
                android:gravity="start"
                android:paddingLeft="20dp"
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_margin="12dp"
                android:text="포장" />

            <Button
                android:id="@+id/baeminstore_button"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="12dp"
                android:gravity="start"
                android:paddingLeft="20dp"
                android:background="@drawable/round_button_back20"
                android:drawableEnd="@drawable/baeminstore"
                android:paddingRight="8dp"
                android:fontFamily="@font/bmhannapro"
                android:textStyle="bold"
                android:text="배민스토어"
                android:textSize="30dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/round_button_back20"
                    android:paddingTop="10dp"
                    android:drawableTop="@drawable/icon1"
                    android:fontFamily="@font/bmhannapro"
                    android:text="쇼핑라이브"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_button_back20"
                    android:fontFamily="@font/bmhannapro"
                    android:drawableTop="@drawable/icon2"
                    android:paddingTop="10dp"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    android:text="선물하기" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_button_back20"
                    android:fontFamily="@font/bmhannapro"
                    android:drawableTop="@drawable/icon3"
                    android:paddingTop="10dp"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:text="전국별미" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                app:cardCornerRadius="20dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:background="@drawable/adview"
                    />
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"
                android:layout_margin="12dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_button_back_left20"
                    android:fontFamily="@font/bmhannaair"
                    android:paddingTop="20dp"
                    android:drawableTop="@drawable/icon4"
                    android:textSize="16dp"
                    android:layout_weight="1"
                    android:text="포인트" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangler_button_back"
                    android:fontFamily="@font/bmhannaair"
                    android:paddingTop="20dp"
                    android:drawableTop="@drawable/icon5"
                    android:textSize="16dp"
                    android:layout_weight="1"
                    android:text="쿠폰함" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangler_button_back"
                    android:fontFamily="@font/bmhannaair"
                    android:paddingTop="20dp"
                    android:drawableTop="@drawable/icon6"
                    android:textSize="16dp"
                    android:layout_weight="1"
                    android:text="선물함" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_button_back_right20"
                    android:fontFamily="@font/bmhannaair"
                    android:paddingTop="20dp"
                    android:drawableTop="@drawable/icon7"
                    android:textSize="16dp"
                    android:layout_weight="1"
                    android:text="찜" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>